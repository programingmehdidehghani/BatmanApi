<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_source_in_detail_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iran_sans"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_dash_middle_source_in_detail_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iran_sans"
        android:text="-"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/txt_source_in_detail_activity"
        app:layout_constraintBottom_toBottomOf="@+id/txt_source_in_detail_activity"
        app:layout_constraintStart_toEndOf="@+id/txt_source_in_detail_activity"
        />

    <TextView
        android:id="@+id/txt_value_in_detail_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iran_sans"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/txt_dash_middle_source_in_detail_activity"
        app:layout_constraintTop_toTopOf="@+id/txt_dash_middle_source_in_detail_activity"
        app:layout_constraintBottom_toBottomOf="@+id/txt_dash_middle_source_in_detail_activity"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>