<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_poster_in_detail_activity"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_image_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_title_in_detail_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="Batman v Superman: Dawn of Justice"
            android:textColor="@android:color/black"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_poster_in_detail_activity"/>

        <TextView
            android:id="@+id/txt_rated_in_detail_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="PG-13"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_in_detail_activity"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_year_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="2016"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/txt_rated_in_detail_activity"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_dash_middle_year_released_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="-"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@+id/txt_year_in_detail_activity"
            app:layout_constraintBottom_toBottomOf="@+id/txt_year_in_detail_activity"
            app:layout_constraintStart_toEndOf="@+id/txt_year_in_detail_activity"
            />

        <TextView
            android:id="@+id/txt_released_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="25 Mar 2016"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/txt_dash_middle_year_released_in_detail_activity"
            app:layout_constraintTop_toTopOf="@+id/txt_year_in_detail_activity"
            app:layout_constraintBottom_toBottomOf="@+id/txt_year_in_detail_activity"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_run_time_in_detail_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="151 min"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/txt_year_in_detail_activity"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/txt_genre_in_detail_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="Action"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/txt_run_time_in_detail_activity"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_name_director_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:layout_marginStart="8dp"
            android:text="@string/director"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/txt_genre_in_detail_activity"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_Director_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="Zack Snyder"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/txt_name_director_in_detail_activity"
            app:layout_constraintTop_toTopOf="@+id/txt_name_director_in_detail_activity"
            app:layout_constraintBottom_toTopOf="@+id/txt_name_writers_in_detail_activity"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/txt_name_writers_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:layout_marginStart="8dp"
            android:text="@string/writer"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_director_in_detail_activity"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_writers_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="Chris Terrio, David S. Goyer, Bob Kane"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/txt_name_writers_in_detail_activity"
            app:layout_constraintTop_toTopOf="@+id/txt_name_writers_in_detail_activity"
            app:layout_constraintBottom_toTopOf="@+id/txt_name_actors_in_detail_activity"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_name_actors_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:layout_marginStart="8dp"
            android:text="@string/actors"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_writers_in_detail_activity"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_actors_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="Ben Affleck, Henry Cavill, Amy Adams"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/txt_name_actors_in_detail_activity"
            app:layout_constraintTop_toTopOf="@+id/txt_name_actors_in_detail_activity"
            app:layout_constraintBottom_toTopOf="@+id/txt_name_Plot_in_detail_activity"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/txt_name_Plot_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:layout_marginStart="8dp"
            android:text="@string/plot"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_actors_in_detail_activity"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_plot_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="Fearing that the actions of Superman are left unchecked, Batman takes on the Man of Steel, while the world wrestles with what kind of a hero it really needs"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/txt_name_Plot_in_detail_activity"
            app:layout_constraintTop_toTopOf="@+id/txt_name_Plot_in_detail_activity"
            app:layout_constraintBottom_toTopOf="@+id/txt_language_in_detail_activity"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_language_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="English"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/txt_plot_in_detail_activity"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_dash_middle_country_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="-"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@+id/txt_language_in_detail_activity"
            app:layout_constraintBottom_toBottomOf="@+id/txt_language_in_detail_activity"
            app:layout_constraintStart_toEndOf="@+id/txt_language_in_detail_activity"
            />

        <TextView
            android:id="@+id/txt_country_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="United States"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@+id/txt_dash_middle_country_in_detail_activity"
            app:layout_constraintBottom_toBottomOf="@+id/txt_dash_middle_country_in_detail_activity"
            app:layout_constraintStart_toEndOf="@+id/txt_dash_middle_country_in_detail_activity"
            />

        <TextView
            android:id="@+id/txt_type_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="movie"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/txt_language_in_detail_activity"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_dash_middle_type_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="-"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@+id/txt_type_in_detail_activity"
            app:layout_constraintBottom_toBottomOf="@+id/txt_type_in_detail_activity"
            app:layout_constraintStart_toEndOf="@+id/txt_type_in_detail_activity"
            />

        <TextView
            android:id="@+id/txt_box_office_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="$330,360,194"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@+id/txt_dash_middle_type_in_detail_activity"
            app:layout_constraintBottom_toBottomOf="@+id/txt_dash_middle_type_in_detail_activity"
            app:layout_constraintStart_toEndOf="@+id/txt_dash_middle_type_in_detail_activity"
            />

        <TextView
            android:id="@+id/txt_web_site_in_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="N/A"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/txt_type_in_detail_activity"
            app:layout_constraintStart_toStartOf="parent"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_rating_in_detail_activity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/txt_web_site_in_detail_activity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ProgressBar
            android:id="@+id/progress_in_detail_film_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>